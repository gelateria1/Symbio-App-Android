            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://github.com/patrickhoefler/symbio"
            android:autoLink="web"
            android:id="@+id/textView"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fork Symbio Android App from Github:" android:id="@+id/textView1"
            />
