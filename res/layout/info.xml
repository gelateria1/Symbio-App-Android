            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Preise: Hauptspeise 6 €, Suppe 2 €, Indisch 6 €, Salat 3 €, Nachspeise 2 €, Hauptspeise/Indisch + Salat 8 €"
